pipeline {
    agent { label "node2" }
    triggers { pollSCM "* * * * *" }
    parameters {  
            choice(name: "image_Type", choices: ["base", "test", "infra"], description: "choose build")
            string(name: "imagename", defaultValue: "ubuntu:latest", description: "ex: ubuntu:latest or full image path")
            
                }
    stages {
        stage ("docker") {
            environment { 
                AN_ACCESS_KEY = credentials("jfrogrep_cred")
              }
              steps {
                 script {
                    def repositoryName = "dockerimages"
                    if ("${params.image_Type}" != "none" ){
                        sh """
                        docker image pull ${imagename}
                        docker image tag ${imagename} pdpk8s.jfrog.io/${repositoryName}/${image_Type}-${imagename}
                        docker image push pdpk8s.jfrog.io/${repositoryName}/${image_Type}-${imagename}
                        """
                    }else {
                        sh """
                         docker image pull ${imagename} 
                         docker image tag ${imagename} pdpk8s.jfrog.io/${repositoryName}/test-${imagename}
                         docker image push pdpk8s.jfrog.io/${repositoryName}/test-${imagename}"""
                    }
                }  
              }
            }
        }
}
